{
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "@typescript-eslint/no-explicit-any": "off",
      "prettier/prettier": "error"
    }
  }
  